---
import Header from '../components/beta/Header.astro'
import Footer from '../components/beta/Footer.astro'
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions'

interface Props {
  title?: string
  description?: string
  image?: string
}

const {
  title,
  description = 'Offizielle Website des Bridge Clubs Winterthur',
  image = '/images/social-preview.avif',
} = Astro.props

const title_ = title ? `${title} | Bridge Winterthur` : 'Bridge Winterthur'
---

<!doctype html>
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <meta property="og:title" content={title_} />
    <meta property="og:site_name" content="Bridge Winterthur" />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://www.bridge-club-winterthur.ch/veranstaltungen"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title_} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title_}</title>
    <ClientRouter />
  </head>

  <body class="min-h-screen">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
